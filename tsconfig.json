{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "pretty": true,
    "strict": true,
    "target": "es2019",
    "lib": ["dom", "es2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/*.ts"]
}
